{
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*/*", 
        "https://*/*", 
        "file://*"
      ], 
      "all_frames": false, 
      "run_at": "document_start", 
      "js": [
        "utils.js", 
        "content_scripts/connector.js", 
        "content_scripts/player.js", 
        "content_scripts/recorder.js", 
        "content_scripts/bookmarks_handler.js"
      ]
    }, 
    {
      "matches": [
        "http://*/*", 
        "https://*/*", 
        "file://*"
      ], 
      "all_frames": true, 
      "run_at": "document_start", 
      "js": [
        "content_scripts/beforeunload.js"
      ]
    }
  ], 
  "description": "Automate your web browser. Record and replay repetitious work", 
  "icons": {
    "128": "skin/logo128.png", 
    "32": "skin/logo32.png", 
    "48": "skin/logo48.png", 
    "16": "skin/logo16.png"
  }, 
  "version": "1.1.0", 
  "options_page": "options.html", 
  "background_page": "bg.html", 
  "permissions": [
    "tabs", 
    "bookmarks"
  ], 
  "browser_action": {
    "default_title": "iMacros for Chrome (Beta)", 
    "default_icon": "skin/logo.gif"
  }, 
  "name": "iMacros for Chrome (Beta)"
}
